{
  "compilerOptions": {
    "target": "es3",
    "module": "ESNext",
    "strict": true,
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__test__/**/*"
  ]
}
